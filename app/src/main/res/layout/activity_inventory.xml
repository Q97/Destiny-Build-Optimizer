            <ImageButton
                android:id="@+id/vault_inv_slot8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="56dp"
                android:background="?android:selectableItemBackground"
                app:layout_constraintEnd_toStartOf="@id/vault_inv_slot9"
                app:layout_constraintTop_toBottomOf="@id/vault_inv_slot5"
                app:srcCompat="@drawable/empty_slot" />

            <ImageButton
                android:id="@+id/vault_inv_slot9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:background="?android:selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vault_inv_slot6"
                app:srcCompat="@drawable/empty_slot" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/currentlyEquippedImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/currentlyEquippedText"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iron_fellowship_casque" />

</androidx.constraintlayout.widget.ConstraintLayout>