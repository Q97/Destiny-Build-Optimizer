                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vaultInventoryText"
                app:srcCompat="@drawable/iron_fellowship_casque" />

            <ImageButton
                android:id="@+id/vault_inv_slot2"
                android:layout_width="90dp"
                android:layout_height="90dp"
